<ul>
<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
<% end %>
</ul>

<div class="container">
    <div class="form">
        <%= form_for(@user, url: sign_in_users_path ) do |form| %>
        <div>
            <span class="label"><%= form.label :username %>: </span>
            <span class="inputbox"><%= form.text_field :username %></span>
        </div>
        <div>
            <span class="label"><%= form.label :password %>: </span>
            <span class="inputbox"><%= form.password_field :password %></span>
        </div>
            <%= form.submit "Log-In" %>
        <% end %>
    </div>
